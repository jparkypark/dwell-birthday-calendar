{
  "name": "dwell-birthday-calendar",
  "version": "1.0.0",
  "description": "A lightweight Slack application that displays member birthdays for Dwell Church",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler publish",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "type-check:tests": "tsc --project tsconfig.tests.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:performance": "vitest run tests/performance",
    "prepare": "husky"
  },
  "keywords": [
    "slack",
    "birthday",
    "cloudflare-workers",
    "church"
  ],
  "author": "Dwell Church",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "@types/node": "^22.7.9",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "eslint": "^9.13.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "miniflare": "^3.20240925.0",
    "typescript": "^5.6.3",
    "vitest": "^1.0.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "git add"
    ],
    "tests/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "itty-router": "^5.0.18"
  }
}
